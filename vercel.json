{
  "version": 2,
  "builds": [
    {
      "src": "transportador_pro/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "transportador_pro/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "transportador_pro.settings",
    "PYTHONPATH": "."
  }
}
